{
  "name": "watchflow",
  "version": "0.8.0",
  "description": "Film, dizi ve anime takip uygulamasÄ±",
  "main": "src/main/main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "clean": "rimraf dist",
    "build": "npm run clean && electron-builder",
    "build:win": "npm run clean && electron-builder --win",
    "build:mac": "npm run clean && electron-builder --mac",
    "build:linux": "npm run clean && electron-builder --linux",
    "test": "echo \"Error: no test specified\" && exit 1",
    "postinstall": "electron-builder install-app-deps",
    "release": "standard-version",
    "release:patch": "standard-version --release-as patch",
    "release:minor": "standard-version --release-as minor",
    "release:major": "standard-version --release-as major"
  },
  "keywords": [
    "electron",
    "desktop",
    "app",
    "movie",
    "tv",
    "anime",
    "watchlist"
  ],
  "author": "macidko",
  "license": "MIT",
  "devDependencies": {
    "@types/dotenv": "^6.1.1",
    "dotenv": "^9.0.2",
    "electron": "^29.0.0",
    "electron-builder": "^24.9.0",
    "rimraf": "^5.0.5",
    "standard-version": "^9.5.0"
  },
  "dependencies": {
    "axios": "^1.6.1",
    "dotenv": "^16.4.5",
    "electron-store": "^8.1.0",
    "fs-extra": "^11.2.0",
    "firebase": "^10.8.0"
  },
  "build": {
    "appId": "com.watchflow.app",
    "productName": "Watchflow",
    "directories": {
      "output": "dist"
    },
    "files": [
      "src/**/*",
      "package.json"
    ],
    "mac": {
      "category": "public.app-category.entertainment",
      "target": [
        "dmg",
        "zip"
      ],
      "icon": "./icon.icns"
    },
    "win": {
      "target": [
        "nsis",
        "portable"
      ],
      "icon": "./icon.ico"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "category": "Entertainment",
      "icon": ".icons/png"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    }
  }
}
